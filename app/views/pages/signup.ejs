<h1 class="display-4">Sign Up</h1>
<form method="post" action="/user/create" name="myForm">
    <div class="form-group">
        <label for="username">Username (min 2 characters)</label>
        <input type="text" class="form-control" id="username" placeholder="Enter username" name="username">
    </div>
    <div class="form-group">
        <label for="password">Password (min 2 characters)</label>
        <input type="password" class="form-control" id="password" placeholder="Enter password" name="password">
    </div>
    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
    <button type="submit" class="btn btn-primary" id="submitButton">Create Account</button>
</form>

<% if(flash && flash.err) { %>
<ul class="alert alert-danger">
<% Object.keys(flash.err).forEach((error) => { %>
    <li><%- JSON.stringify(flash.err[error]) %></li>
<% }) %>
</ul>
<% } %>